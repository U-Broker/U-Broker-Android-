<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvNombreCliente_Descripcion_Dialogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[Nombre del Cliente]"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="27dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEtapaProceso_Descripcion_Dialogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[Etapa Proceso]"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreCliente_Descripcion_Dialogo"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ProgressBar
        android:id="@+id/pbBarraProgreso_Descripcion_Dialogo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="45dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/tvEtapaProceso_Descripcion_Dialogo"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEtapaProceso_Descripcion_Dialogo"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tvEtapaProceso_Descripcion_Dialogo" />

    <TextView
        android:id="@+id/tvPorcentajeAvance_Descripcion_Dialogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Porcentaje de Avance: "
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/pbBarraProgreso_Descripcion_Dialogo"
        app:layout_constraintTop_toBottomOf="@+id/pbBarraProgreso_Descripcion_Dialogo"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pbBarraProgreso_Descripcion_Dialogo" />

    <TextView
        android:id="@+id/tvComentarios_Descripcion_Dialogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Comentarios:"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/tvPorcentajeAvance_Descripcion_Dialogo"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPorcentajeAvance_Descripcion_Dialogo"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tvPorcentajeAvance_Descripcion_Dialogo" />
</android.support.constraint.ConstraintLayout>